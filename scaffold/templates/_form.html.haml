= form_for(@<%= singular_name %>, html: {class: 'form-horizontal'}) do |f|
  - if @<%= singular_name %>.errors.any?
    #errorExplanation.alert.alert-error
      %h2= "#{pluralize(@<%= singular_name %>.errors.count, 'error')} prohibited this <%= singular_name %> from being saved:"
      %ul
        - @<%= singular_name %>.errors.full_messages.each do |msg|
          %li= msg
 
  %fieldset
    %legend Legend  
  <% for attribute in attributes -%>
  .form-group
    = f.label :<%= attribute.name %>, class: 'col-lg-2 control-label'
    .col-lg-10
      = f.<%= attribute.field_type %> :<%= attribute.name %>
  <% end -%>
  .form-group
    .col-lg-offset-2 col-lg-10
      = f.submit 'Submit', class: 'btn btn-default'
